# Board-specific Makefile additions for FPB-RA8E1 SPI support
# Add these lines to nuttx/boards/arm/ra8/fpb-ra8e1/src/Makefile

# SPI support
ifeq ($(CONFIG_RA8_SPI),y)
CSRCS += ra8e1_spi.c
endif

# GY-912 sensor support
ifeq ($(CONFIG_SENSORS_GY912),y)
CSRCS += ra8e1_gy912_complete_demo.c
endif

# If you want to include the original demo too:
ifeq ($(CONFIG_EXAMPLES_SPI_GY912),y)
CSRCS += ra8e1_spi_gy912_demo.c
endif
