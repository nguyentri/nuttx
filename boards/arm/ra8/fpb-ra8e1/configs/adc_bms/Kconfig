#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_ADC_BATTERY
	tristate "ADC Battery Monitor Example"
	default n
	depends on ADC && RA8_ADC_BATTERY_MONITOR
	---help---
		Enable the ADC battery monitor example for FPB-RA8E1.
		This example demonstrates how to use the ADC driver to
		monitor battery voltage and current.

if EXAMPLES_ADC_BATTERY

config EXAMPLES_ADC_BATTERY_PROGNAME
	string "Program name"
	default "adc_battery"
	---help---
		This is the name of the program that will be used when the
		NSH ELF program is installed.

config EXAMPLES_ADC_BATTERY_PRIORITY
	int "ADC Battery task priority"
	default 100

config EXAMPLES_ADC_BATTERY_STACKSIZE
	int "ADC Battery stack size"
	default 2048

endif
